<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgAdapter"
            android:background="@color/white_transparent"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <com.example.cubesschool8.supermarket.customComponents.CustomTextViewFont
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAdapter"
            android:layout_marginLeft="@dimen/margin10"
            android:textSize="18dp"
            android:text="Naziv:"

            android:layout_marginTop="10dp"
        />

        <com.example.cubesschool8.supermarket.customComponents.CustomTextViewFont
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAdapter"
            android:layout_marginLeft="@dimen/margin10"
            android:textSize="18dp"
            android:text="Cena: "
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/imgAdapter"
        android:layout_marginLeft="@dimen/margin_prijava"
        android:layout_marginRight="@dimen/margin_prijava"
        android:background="@color/underlineopacity"

        />
</LinearLayout>